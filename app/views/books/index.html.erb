<%= render "layouts/alerts" %>

<h1>Books</h1>

<div class="search-books">
  <div class="row">
    <%= form_tag root_path,:method=>:get  do %>
      
      <div class="col-md-3 col-lg-3 col-sm-6 col-xs-6">
        <div class="form-group">
          <p> Title </p>
          <%= text_field_tag :title,params[:title],:placeholder=>"Title"  %>
        </div>
      </div>

      <div class="col-md-3 col-lg-3 col-sm-6 col-xs-6">
        <div class="form-group">
          <p> Price</p>
          <%= text_field_tag :price,params[:price],:placeholder=>"Greater Than"  %>
        </div>
      </div>

      <div class="col-md-3 col-lg-3 col-sm-6 col-xs-6">
        <div class="form-group">
          <p> Tags </p>
          <%= text_field_tag :tags,params[:tags],:placeholder=>"Tags"  %>
        </div>
      </div>

      <div class="col-md-3 col-lg-3 col-sm-6 col-xs-6">
        <%= submit_tag 'Search',:class=>"btn btn-info",:style=>"margin-bottom: 30px;"%>
      </div>
    <% end %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td>
          <% book.tags.each do |tag| %>
            <span class="tag"><%= tag.title %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
