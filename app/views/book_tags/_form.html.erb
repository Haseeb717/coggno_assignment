<div class="container">
  <h1>New Book Tag</h1>
  <%= form_with(model: book_tag) do |form| %>
    <%= render "layouts/alerts" %>
    <div class="form-group">
      <%= form.collection_check_boxes(:book_id, books_hash, :last, :first, include_hidden: false) do |b| %>
        <div class="form-check form-check-inline">
          <%= b.check_box class: 'form-check-input' %>
          <%= b.label class: 'form-check-label' %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :tag_id %>
      <%= form.select :tag_id, options_for_select(Tag.pluck(:title,:id)),{ include_hidden: false }, {:multiple => true, :class => "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.submit "Create",:class=>"btn btn-success" %>
    </div>
  <% end %>
</div>